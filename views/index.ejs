<%- include('./partials/header') %>

<div class="min-h-screen flex flex-col items-center justify-center bg-gradient-to-r from-blue-100 via-blue-200 to-blue-300 py-6 sm:py-12">
    <% if(error.length > 0) { %>
    <div class="absolute top-5 left-1/2 transform -translate-x-1/2 p-4 rounded-md bg-red-500 shadow-lg">
        <span class="text-white font-semibold">
            <%= error %>
        </span>
    </div>
    <% } %>
    <div class="bg-white shadow-xl rounded-lg overflow-hidden w-full max-w-4xl border border-gray-300">
        <div class="md:flex">
            <div class="w-full md:w-1/2 p-8 bg-gradient-to-r from-blue-500 to-blue-600 text-white">
                <h3 class="text-4xl font-bold mb-4">Welcome to <span class="text-yellow-300">Advance Chat App</span></h3>
                <h4 class="text-2xl mb-6">Create Your Account</h4>
                <form autocomplete="off" action="/users/register" method="post" class="space-y-4">
                    <input class="bg-gray-100 block w-full px-4 py-3 border border-gray-300 rounded-md" type="text" placeholder="Full Name" name="fullname" required>
                    <input class="bg-gray-100 block w-full px-4 py-3 border border-gray-300 rounded-md" type="email" placeholder="Email" name="email" required>
                    <input class="bg-gray-100 block w-full px-4 py-3 border border-gray-300 rounded-md" type="password" placeholder="Password" name="password" required>
                    <input class="bg-yellow-500 text-white px-6 py-3 rounded-full w-full mt-4 cursor-pointer hover:bg-yellow-600 transition-colors duration-300" type="submit" value="Create My Account">
                </form>
            </div>
            <div class="hidden md:flex w-1/2 items-center justify-center bg-gradient-to-r from-blue-600 to-blue-800 text-white p-8">
                <div class="text-center">
                    <h4 class="text-2xl mb-6">Login to Your Account</h4>
                    <form autocomplete="off" action="/users/login" method="post" class="space-y-4">
                        <input class="bg-gray-100 block w-full px-4 py-3 border border-gray-300 rounded-md text-black" type="email" placeholder="Email" name="email" required>
                        <input class="bg-gray-100 block w-full px-4 py-3 border border-gray-300 rounded-md text-black" type="password" placeholder="Password" name="password" required>
                        <input class="bg-yellow-500 text-white px-6 py-3 rounded-full w-full mt-4 cursor-pointer hover:bg-yellow-600 transition-colors duration-300" type="submit" value="Login">
                    </form>
                </div>
            </div>
        </div>
        <div class="md:hidden flex flex-col p-8 bg-gradient-to-r from-blue-500 to-blue-600 text-white">
            <h4 class="text-2xl mb-6">Login to Your Account</h4>
            <form autocomplete="off" action="/users/login" method="post" class="space-y-4">
                <input class="bg-gray-100 block w-full px-4 py-3 border border-gray-300 rounded-md text-black" type="email" placeholder="Email" name="email" required>
                <input class="bg-gray-100 block w-full px-4 py-3 border border-gray-300 rounded-md text-black" type="password" placeholder="Password" name="password" required>
                <input class="bg-yellow-500 text-white px-6 py-3 rounded-full w-full mt-4 cursor-pointer hover:bg-yellow-600 transition-colors duration-300" type="submit" value="Login">
            </form>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>
